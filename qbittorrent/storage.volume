
plugin_id   = "nfs"
type        = "csi"
id          = "qbittorrent"
name        = "qBittorrent"

capability {
	access_mode = "single-node-writer"
	attachment_mode = "file-system"
}

context {
  server = "storage.home"
  share = "/volume2/homelab-dmz"
  subDir = "qbittorrent"
  mountPermissions = "755"
}

mount_options {
  fs_type = "nfs"
  mount_flags = [ "timeo=30", "vers=4.1", "nolock", "noatime" ]
}

