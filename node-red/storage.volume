
plugin_id   = "nfs"
type        = "csi"
id          = "nodered"
name        = "Node Red"

capability {
	access_mode = "single-node-writer"
	attachment_mode = "file-system"
}

context {
  server = "storage.home"
  share = "/volume2/homelab"
  subDir = "node-red"
  mountPermissions = "0"  
}

mount_options {
  fs_type = "nfs"
  mount_flags = [ "soft", "async" ]
}

