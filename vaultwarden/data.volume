
plugin_id   = "nfs"
type        = "csi"
id          = "vaultwarden"
name        = "Vaultwarden"

capability {
	access_mode = "single-node-writer"
	attachment_mode = "file-system"
}

context {
  server = "storage.home"
  share = "/volume2/homelab-dmz"
  subDir = "vaultwarden"
  mountPermissions = "775"  
}

mount_options {
  fs_type = "nfs"
  mount_flags = [ "timeo=30", "vers=4.1", "nolock", "sync" ]
}

