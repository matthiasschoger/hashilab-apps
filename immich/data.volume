
plugin_id   = "nfs"
type        = "csi"
id          = "immich-data"
name        = "Immich Data"

capability {
	access_mode = "multi-node-multi-writer" # multi-node, both api server and microservices tasks
	attachment_mode = "file-system"
}

context {
  server = "storage.home"
  share = "/volume1/homelab-dmz-hdd"
  subDir = "immich"
  mountPermissions = "755"  
}

mount_options {
  fs_type = "nfs"
  mount_flags = [ "timeo=30", "vers=4.1", "nolock", "sync" ]
}

